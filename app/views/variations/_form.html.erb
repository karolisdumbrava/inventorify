<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-4xl sm:mx-auto">
    <div class="absolute inset-0 bg-gradient-to-r from-cyan-400 to-light-blue-500 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl"></div>
    <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
      <div class="max-w-md mx-auto">

        <!-- Variation Form -->
        <%= form_with model: [@product, @variation], local: true, class: "space-y-6" do |form| %>

          <!-- Error Display -->
          <% if @variation.errors.any? %>
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
              <h2 class="font-bold"><%= pluralize(@variation.errors.count, "error") %> prohibited this variation from being saved:</h2>
              <ul class="list-disc pl-5">
                <% @variation.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Model Field -->
          <div>
            <%= form.label :model, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :model, class: "mt-1 p-2 w-full border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <!-- Storage Field -->
          <div>
            <%= form.label :storage, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :storage, class: "mt-1 p-2 w-full border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <!-- Size Field -->
          <div>
            <%= form.label :size, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :size, class: "mt-1 p-2 w-full border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <!-- Color Field -->
          <div>
            <%= form.label :color, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :color, class: "mt-1 p-2 w-full border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <!-- Price Field -->
          <div>
            <%= form.label :price, class: "block text-sm font-medium text-gray-700" %>
            <%= form.number_field :price, class: "mt-1 p-2 w-full border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <!-- Submit Button -->
          <div>
            <%= form.submit @variation.new_record? ? "Add Variation" : "Update Variation", class: "w-full px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
