<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div class="absolute inset-0 bg-gradient-to-r from-cyan-400 to-light-blue-500 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl"></div>
    <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
      <div class="max-w-md mx-auto">

        <!-- Form -->
        <%= form_with(model: product, local: true, class: "space-y-6") do |form| %>

          <!-- Errors Display -->
          <% if product.errors.any? %>
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
              <h2 class="font-bold"><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
              <ul class="list-disc pl-5">
                <% product.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Name Field -->
          <div>
            <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, id: :product_name, class: "mt-1 p-2 w-full border rounded-md" %>
          </div>

          <!-- Description Field -->
          <div>
            <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_area :description, id: :product_description, class: "mt-1 p-2 w-full border rounded-md", rows: "5" %>
          </div>

          <!-- Submit Button -->
          <div>
            <%= form.submit class: "w-full px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
          </div>

        <% end %>

        <!-- Back Link -->
        <div class="mt-4">
          <%= link_to 'Back', products_path, class: "text-blue-500 hover:underline" %>
        </div>

      </div>
    </div>
  </div>
</div>
