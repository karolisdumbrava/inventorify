<h1>Products</h1>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td><%= link_to product.name, product %></td>
            <td><%= product.description %></td>
            <td>
                <%= link_to 'Edit', edit_product_path(product) %>
                <%= button_to 'Delete', product, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } } %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'New Product', new_product_path %>
