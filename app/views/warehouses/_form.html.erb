<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div class="absolute inset-0 bg-gradient-to-r from-cyan-400 to-light-blue-500 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl"></div>
    <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
      <div class="max-w-md mx-auto">

        <!-- Warehouse Form -->
        <%= form_with model: @warehouse, local: true, class: "space-y-6" do |form| %>

          <!-- Name Field -->
          <div>
            <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, class: "mt-1 p-2 w-full border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <!-- Address Field -->
          <div>
            <%= form.label :address, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_area :address, class: "mt-1 p-2 w-full border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", rows: "5" %>
          </div>

          <!-- Capacity Field -->
          <div>
            <%= form.label :capacity, class: "block text-sm font-medium text-gray-700" %>
            <%= form.number_field :capacity, class: "mt-1 p-2 w-full border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", min: 1 %>
          </div>

          <!-- Submit Button -->
          <div>
            <%= form.submit @warehouse.new_record? ? "Create Warehouse" : "Update Warehouse", class: "w-full px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
